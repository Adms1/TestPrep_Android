<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:background="@color/white">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.v4.view.ViewPager
                android:id="@+id/mp_view_pager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/main_pkg_item_tvCategory"
                  app:layout_constraintTop_toBottomOf="@+id/mp_view_pager"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toLeftOf="@+id/main_pkg_item_tvSeeall"
                  android:layout_marginLeft="@dimen/_10sdp"
                  android:textSize="@dimen/_15sdp"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:textColor="@color/black"
                  android:text="Packages"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/main_pkg_item_tvSeeall"
                  app:layout_constraintTop_toTopOf="@+id/main_pkg_item_tvCategory"
                  app:layout_constraintBottom_toBottomOf="@+id/main_pkg_item_tvCategory"
                  app:layout_constraintRight_toRightOf="parent"
                  android:layout_marginRight="@dimen/_10sdp"
                  android:textSize="@dimen/_12sdp"
                  android:textColor="@color/colorPrimaryDark"
                  android:text="See All"/>

        <RelativeLayout android:id="@+id/rlCoverflow"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:background="#FFFFFF"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/main_pkg_item_tvCategory"
                        android:layout_marginRight="10dp">

            <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/carousel"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerInParent="true"/>-->

            <com.testprep.carouselPkg.CarouselView
                    android:id="@+id/carousel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="#ffffff"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblSelectedIndex"
                    tools:text="Selected Index"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:textColor="@android:color/white"/>

        </RelativeLayout>

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/main_pkg_item_tvTutor"
                  app:layout_constraintTop_toBottomOf="@+id/rlCoverflow"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toLeftOf="@+id/main_pkg_item_tvSeeall"
                  android:layout_marginLeft="@dimen/_10sdp"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:textSize="@dimen/_15sdp"
                  android:textColor="@color/black"
                  android:text="Tutor"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/main_pkg_item_tvTSeeall"
                  app:layout_constraintTop_toTopOf="@+id/main_pkg_item_tvTutor"
                  app:layout_constraintBottom_toBottomOf="@+id/main_pkg_item_tvTutor"
                  app:layout_constraintRight_toRightOf="parent"
                  android:layout_marginRight="@dimen/_10sdp"
                  android:textSize="@dimen/_12sdp"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:textColor="@color/colorPrimaryDark"
                  android:text="See All"/>

        <RelativeLayout
                android:id="@+id/rlCoverflow1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:background="#FFFFFF"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_pkg_item_tvTutor"
                android:layout_marginRight="10dp">

            <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/carousel"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerInParent="true"/>-->

            <com.testprep.carouselPkg.CarouselView
                    android:id="@+id/carousel1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="#ffffff"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblSelectedIndex1"
                    tools:text="Selected Index"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:textColor="@android:color/white"/>

        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>
</ScrollView>
