<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingTop="@dimen/_20sdp"
        tools:context=".fragments.MarketPlaceFragment">

    <TextView
            android:text="@string/market_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_7sdp"
            android:paddingTop="@dimen/_7sdp"
            android:id="@+id/market_header"
            android:layout_marginBottom="@dimen/_5sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="@dimen/_150sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/market_ivBack"
            android:textSize="@dimen/normal_text_size"
            android:gravity="center_vertical"/>

    <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/back_button"
            android:id="@+id/market_ivBack"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/market_header"
            android:padding="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="@+id/market_header"/>

    <android.support.design.widget.TabLayout
            android:id="@+id/market_tabs"
            app:layout_constraintTop_toBottomOf="@+id/market_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_blue"
            android:layout_gravity="center_horizontal"
            app:tabGravity="fill"
            app:tabTextColor="@color/gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:tabTextAppearance="@style/MineCustomTabText"
            app:tabSelectedTextColor="@color/nfcolor"
            app:tabIndicatorColor="@color/nfcolor"/>

    <android.support.v4.view.ViewPager
            android:id="@+id/market_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:paddingBottom="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/market_tabs"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
