<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:id="@+id/main_pkg_item_tvCategory"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toLeftOf="@+id/main_pkg_item_tvSeeall"
              android:layout_marginLeft="@dimen/_10sdp"
              android:textSize="@dimen/_15sdp"
              android:textColor="@color/black"
              android:text="Standard 9"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/main_pkg_item_tvSeeall"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="@+id/main_pkg_item_tvCategory"
              app:layout_constraintRight_toRightOf="parent"
              android:layout_marginRight="@dimen/_10sdp"
              android:textSize="@dimen/_12sdp"
              android:textColor="@color/colorPrimaryDark"
              android:text="See All"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/main_pkg_item_rvList"
            app:layout_constraintTop_toBottomOf="@id/main_pkg_item_tvCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>
