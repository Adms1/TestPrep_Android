<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".activity.ChangePasswordActivity">

    <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:padding="@dimen/_9sdp"
            app:layout_constraintTop_toTopOf="@+id/chngepass_tvHeading"
            app:layout_constraintBottom_toBottomOf="@+id/chngepass_tvHeading"
            app:srcCompat="@drawable/back_button"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/chngepass_ivBack"/>

    <TextView
            android:id="@+id/chngepass_tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_7sdp"
            android:paddingTop="@dimen/_7sdp"
            android:gravity="center_vertical"
            android:text="@string/change_pass"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/chngepass_ivBack"
            android:textSize="@dimen/normal_header_size"/>

    <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:srcCompat="@drawable/password_new"
            android:layout_marginLeft="@dimen/_15sdp"
            app:layout_constraintTop_toTopOf="@+id/chngepass_llEmail"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="@+id/chngepass_llEmail"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/chngepass_ive"/>

    <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextAppearence.TextInputLayout.Blue"
            app:layout_constraintTop_toBottomOf="@+id/chngepass_tvHeading"
            app:layout_constraintLeft_toRightOf="@+id/chngepass_ive"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/chngepass_llEmail">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/chngepass_etNewpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New Password"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:textSize="@dimen/normal_text_size"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="@color/gray"
                android:textAllCaps="true"
                android:imeOptions="actionNext"
                android:paddingTop="@dimen/_7sdp"
                android:paddingBottom="@dimen/_14sdp"
                android:paddingLeft="@dimen/_10sdp"/>

    </android.support.design.widget.TextInputLayout>

    <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:srcCompat="@drawable/password_new"
            android:layout_marginLeft="@dimen/_15sdp"
            app:layout_constraintTop_toTopOf="@+id/chngepass_llPassword"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="@+id/chngepass_llPassword"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/chngepass_ivp"/>

    <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextAppearence.TextInputLayout.Blue"
            app:layout_constraintTop_toBottomOf="@id/chngepass_llEmail"
            app:layout_constraintLeft_toRightOf="@+id/chngepass_ivp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/chngepass_llPassword">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/chngepass_etconfirmpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:textColorHint="@color/colorPrimary"
                android:paddingTop="@dimen/_7sdp"
                android:paddingBottom="@dimen/_14sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:textSize="@dimen/normal_text_size"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textColor="@color/gray"
                android:imeOptions="actionDone"/>

    </android.support.design.widget.TextInputLayout>

    <Button
            android:id="@+id/chngepass_btnChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@drawable/login_round_bg"
            android:text="Change Password"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>
