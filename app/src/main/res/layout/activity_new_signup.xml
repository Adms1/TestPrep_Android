<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
    tools:context="com.testcraft.testcraft.activity.SignupActivity">

    <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            app:srcCompat="@drawable/back_arrow"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:id="@+id/signup_ivBack"/>

    <TextView
            android:id="@+id/signup_tvHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="@string/sign_up_header"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/normal_header_size"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"/>

    <ScrollView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/signup_tvHeading">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/signup_ivLogo"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_100sdp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/tc_logo"
                    android:contentDescription="@string/logo"/>

            <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:srcCompat="@drawable/person_new"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:layout_constraintTop_toTopOf="@+id/signup_tvFname"
                    app:layout_constraintBottom_toBottomOf="@+id/signup_etFname"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/signup_ivfname"/>

            <TextView
                    android:id="@+id/signup_tvFname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/full_name"
                    android:textColor="@color/gray"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:textSize="@dimen/small_text_size"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:imeOptions="actionNext"
                    app:layout_constraintLeft_toRightOf="@+id/signup_ivfname"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_ivLogo"
                    android:layout_marginTop="@dimen/_10sdp"/>

            <EditText
                    android:id="@+id/signup_etFname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/full_name"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:textSize="@dimen/normal_text_size"
                    android:inputType="text"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:paddingBottom="@dimen/_7sdp"
                    app:layout_constraintLeft_toRightOf="@+id/signup_ivfname"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_tvFname"/>

            <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:srcCompat="@drawable/person_new"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:layout_constraintTop_toTopOf="@+id/signup_tvLname"
                    app:layout_constraintBottom_toBottomOf="@+id/signup_etLname"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_tvFname"
                    android:id="@+id/signup_ivlname"/>

            <TextView
                    android:id="@+id/signup_tvLname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/last_name"
                    android:textColor="@color/gray"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:textSize="@dimen/small_text_size"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:imeOptions="actionNext"
                    app:layout_constraintLeft_toRightOf="@+id/signup_ivlname"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_etFname"
                    android:layout_marginTop="@dimen/_10sdp"/>

            <EditText
                    android:id="@+id/signup_etLname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/last_name"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:textSize="@dimen/normal_text_size"
                    android:inputType="text"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/signup_ivlname"
                    app:layout_constraintTop_toBottomOf="@+id/signup_tvLname"
                    android:paddingBottom="@dimen/_7sdp"/>

            <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:srcCompat="@drawable/person_new"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:layout_constraintTop_toTopOf="@+id/signup_tvEmail"
                    app:layout_constraintBottom_toBottomOf="@+id/signup_etEmail"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_etLname"
                    android:id="@+id/signup_ivEmail"/>

            <TextView
                    android:id="@+id/signup_tvEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_email"
                    android:textColor="@color/gray"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:textSize="@dimen/small_text_size"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:imeOptions="actionNext"
                    app:layout_constraintLeft_toRightOf="@+id/signup_ivEmail"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_etLname"
                    android:layout_marginTop="@dimen/_10sdp"/>

            <EditText
                    android:id="@+id/signup_etEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_email"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:textSize="@dimen/normal_text_size"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:paddingTop="@dimen/_7sdp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/signup_ivEmail"
                    app:layout_constraintTop_toBottomOf="@+id/signup_tvEmail"
                    android:paddingBottom="@dimen/_7sdp"/>

            <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:srcCompat="@drawable/person_new"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:layout_constraintTop_toTopOf="@+id/signup_tvPassword"
                    app:layout_constraintBottom_toBottomOf="@+id/signup_etPassword"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_etEmail"
                    android:id="@+id/signup_ivPassword"/>

            <TextView
                    android:id="@+id/signup_tvPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/password"
                    android:textColor="@color/gray"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:textSize="@dimen/small_text_size"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:imeOptions="actionNext"
                    app:layout_constraintLeft_toRightOf="@+id/signup_ivEmail"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_etEmail"
                    android:layout_marginTop="@dimen/_10sdp"/>

            <EditText
                    android:id="@+id/signup_etPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:textSize="@dimen/normal_text_size"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:paddingTop="@dimen/_7sdp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/signup_ivEmail"
                    app:layout_constraintTop_toBottomOf="@+id/signup_tvPassword"
                    android:paddingBottom="@dimen/_7sdp"/>

            <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:srcCompat="@drawable/person_new"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:layout_constraintTop_toTopOf="@+id/signup_tvCPassword"
                    app:layout_constraintBottom_toBottomOf="@+id/signup_etCPassword"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_etPassword"
                    android:id="@+id/signup_ivCPassword"/>

            <TextView
                    android:id="@+id/signup_tvCPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/cpassword"
                    android:textColor="@color/gray"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:textSize="@dimen/small_text_size"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:imeOptions="actionNext"
                    app:layout_constraintLeft_toRightOf="@+id/signup_ivCPassword"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_etPassword"
                    android:layout_marginTop="@dimen/_10sdp"/>

            <EditText
                    android:id="@+id/signup_etCPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/cpassword"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:textSize="@dimen/normal_text_size"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:paddingTop="@dimen/_7sdp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_tvCPassword"
                    app:layout_constraintLeft_toRightOf="@+id/signup_ivCPassword"
                    android:paddingBottom="@dimen/_7sdp"/>

            <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:srcCompat="@drawable/person_new"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:layout_constraintTop_toTopOf="@+id/signup_tvMobile"
                    app:layout_constraintBottom_toBottomOf="@+id/signup_etMobile"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_etCPassword"
                    android:id="@+id/signup_ivMobile"/>

            <TextView
                    android:id="@+id/signup_tvMobile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/cpassword"
                    android:textColor="@color/gray"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:textSize="@dimen/small_text_size"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:imeOptions="actionNext"
                    app:layout_constraintLeft_toRightOf="@+id/signup_ivMobile"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_etCPassword"
                    android:layout_marginTop="@dimen/_10sdp"/>

            <EditText
                    android:id="@+id/signup_etMobile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/mobile"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_text_size"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:imeOptions="actionDone"
                    android:paddingTop="@dimen/_7sdp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/signup_ivMobile"
                    app:layout_constraintTop_toBottomOf="@+id/signup_tvMobile"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_7sdp"/>

            <Button
                    android:id="@+id/signup_btnSignup"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:text="@string/continuee"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@drawable/login_round_bg"
                    android:textSize="@dimen/normal_text_size"
                    android:textAllCaps="false"
                    app:layout_constraintTop_toBottomOf="@+id/signup_etMobile"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"/>

            <TextView
                    android:id="@+id/signup_btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_in"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:textSize="@dimen/small_text_size"
                    android:layout_marginBottom="@dimen/_20sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_btnSignup"
                    android:layout_marginTop="@dimen/_15sdp"/>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</RelativeLayout>
