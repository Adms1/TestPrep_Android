<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:text="Test"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/my_packages_header"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"
            app:layout_constraintLeft_toRightOf="@+id/my_packages_ivBack"
            app:layout_constraintRight_toRightOf="parent"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginRight="@dimen/_20sdp"
            android:textSize="@dimen/normal_header_size"
            android:gravity="center_vertical"
            android:textColor="@color/black"/>

    <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/back_button"
            android:id="@+id/my_packages_ivBack"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/my_packages_header"
            android:padding="@dimen/_9sdp"
            app:layout_constraintBottom_toBottomOf="@+id/my_packages_header"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/_200sdp"
            android:src="@drawable/progressicon"
            android:id="@+id/my_packages_ivProgress"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/my_packages_header"/>

    <TextView
            android:text="Included Packages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/my_packages_pkgs"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"
            app:layout_constraintTop_toBottomOf="@+id/my_packages_ivProgress"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginRight="@dimen/_20sdp"
            android:textSize="@dimen/normal_header_size"
            android:gravity="center_vertical"
            android:textColor="@color/black"/>


    <android.support.v7.widget.RecyclerView
            android:id="@+id/my_packages_rvList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_packages_pkgs"
            android:layout_marginTop="@dimen/_10sdp"/>

</android.support.constraint.ConstraintLayout>
