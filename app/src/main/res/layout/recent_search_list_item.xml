<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/filter_item_mainll">

    <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="@+id/recent_item_ivName"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/search"
            android:layout_marginLeft="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="@+id/recent_item_ivName"
            android:id="@+id/recent_item_ivSearch"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/recent_item_ivSearch"
            android:id="@+id/recent_item_ivName"
            android:text="subject"
            android:padding="@dimen/_10sdp"/>

</android.support.constraint.ConstraintLayout>

