<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/filter_item_mainll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_blue">

    <ImageView
        android:id="@+id/filter_item_ivSelect"
        android:layout_width="@dimen/_4sdp"
        android:layout_height="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:src="@drawable/close_cancel"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/filter_item_tvType"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/filter_item_tvType"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/filter_item_tvType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:text="subject"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintLeft_toRightOf="@+id/filter_item_ivSelect"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
