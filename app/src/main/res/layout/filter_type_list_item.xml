<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue"
        android:id="@+id/filter_item_mainll">

    <ImageView
            android:layout_width="@dimen/_4sdp"
            android:layout_height="@dimen/_4sdp"
            app:layout_constraintTop_toTopOf="@+id/filter_item_tvType"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/close_cancel"
            android:layout_marginLeft="@dimen/_5sdp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/filter_item_tvType"
            android:id="@+id/filter_item_ivSelect"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/filter_item_ivSelect"
            android:id="@+id/filter_item_tvType"
            android:text="subject"
            android:padding="@dimen/_10sdp"/>

</android.support.constraint.ConstraintLayout>
