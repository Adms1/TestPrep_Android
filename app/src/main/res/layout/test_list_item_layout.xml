<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="@dimen/_5sdp"
        android:padding="@dimen/_5sdp">

    <TextView
            android:id="@+id/test_item_tvTestName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
        android:maxLines="2"
        android:textSize="@dimen/_12sdp"
            android:padding="@dimen/_5sdp"
            app:layout_constraintRight_toLeftOf="@+id/test_item_tvMarks"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/test_item_tvMarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
            app:layout_constraintRight_toLeftOf="@+id/test_item_btnStart"
            app:layout_constraintTop_toTopOf="parent"
            android:maxLines="1"
            android:textColor="@color/gray"
            android:padding="@dimen/_5sdp"/>

    <Button
            android:id="@+id/test_item_btnStart"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="@dimen/_25sdp"
            android:textSize="@dimen/extra_small_size"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/test_item_tvMarks"
            android:background="@drawable/login_round_bg"
            android:text="Start Test"
            android:textAllCaps="false"
            android:textColor="@color/white"/>

    <!--<View-->
    <!--android:layout_height="@dimen/_1sdp"-->
    <!--android:layout_width="match_parent"-->
    <!--app:layout_constraintTop_toBottomOf="@+id/test_item_tvTestName"-->
    <!--android:background="#EFEFEF"/>-->

</android.support.constraint.ConstraintLayout>
