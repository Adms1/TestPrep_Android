<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@color/white"
    android:padding="@dimen/_5sdp">

    <TextView
        android:id="@+id/test_item_tvTestName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textSize="@dimen/_12sdp"
        android:ellipsize="end"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/test_item_tvMarks"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/test_item_tvTestDuration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/test_item_tvTestName"
        app:layout_constraintTop_toBottomOf="@+id/test_item_tvTestName" />

    <TextView
        android:id="@+id/test_item_tvMarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center"
        android:maxLines="1"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/gray"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="@+id/test_item_tvTestDuration"
        app:layout_constraintRight_toLeftOf="@+id/test_item_btnStart"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/test_item_btnStart"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_25sdp"
        android:background="@drawable/login_round_bg"
        android:text="Start Test"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/extra_small_size"
        app:layout_constraintBottom_toBottomOf="@+id/test_item_tvTestDuration"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--<View-->
    <!--android:layout_height="@dimen/_1sdp"-->
    <!--android:layout_width="match_parent"-->
    <!--app:layout_constraintTop_toBottomOf="@+id/test_item_tvTestName"-->
    <!--android:background="#EFEFEF"/>-->

</android.support.constraint.ConstraintLayout>
