        <FrameLayout
                android:id="@+id/frame_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <!--android:background="@color/white"-->

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#EFEFEF"
                        tools:context=".activity.TabwiseQuestionActivity">

                    <!--android:background="@color/white"-->

                    <RelativeLayout
                            android:id="@+id/queTab_llTop"
                            app:layout_constraintTop_toTopOf="parent"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:paddingTop="@dimen/_7sdp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_height="wrap_content">

                        <CheckBox
                                android:id="@+id/queTab_ivPlayPause"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center"
                                android:checked="true"
                                android:visibility="gone"
                                android:button="@drawable/stop_watch"/>

                        <ImageView
                                android:id="@+id/queTab_ivStop"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center"
                                android:checked="true"
                                android:src="@drawable/stop_watch"/>

                        <TextView
                                android:text="@string/_00_00"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/queTab_tvTimer"
                                android:paddingTop="@dimen/_7sdp"
                                android:paddingBottom="@dimen/_7sdp"
                                android:textSize="@dimen/_15sdp"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:layout_toRightOf="@+id/queTab_ivStop"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:textColor="@color/dark_sky_blue"
                                android:maxLines="1"/>

                        <TextView
                                android:text="@string/submit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/queTab_tvSubmit"
                                android:paddingTop="@dimen/_7sdp"
                                android:paddingBottom="@dimen/_7sdp"
                                android:textSize="@dimen/_15sdp"
                                android:paddingLeft="@dimen/_5sdp"
                                android:textStyle="bold"
                                android:visibility="gone"
                                android:paddingRight="@dimen/_5sdp"
                                android:textColor="@color/dark_sky_blue"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_alignParentRight="true"
                                app:layout_constraintTop_toTopOf="parent"/>

                        <ImageView
                                android:id="@+id/queTab_ivReview"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginBottom="@dimen/_7sdp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:src="@drawable/hint_bulb"
                                android:padding="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:contentDescription="@string/logo"/>

                    </RelativeLayout>

                    <android.support.design.widget.TabLayout
                            android:id="@+id/queTab_sliding_tabs"
