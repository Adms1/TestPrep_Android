<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingTop="@dimen/_15sdp"
        tools:context=".activity.TabwiseQuestionActivity">

    <RelativeLayout
            android:id="@+id/queTab_llTop"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/white"
            android:layout_height="wrap_content">

        <CheckBox
                android:id="@+id/queTab_ivPlayPause"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:checked="true"
                android:button="@drawable/play_pause_checkbox"/>

        <TextView
                android:text="@string/_00_00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/queTab_tvTimer"
                android:paddingTop="@dimen/_7sdp"
                android:paddingBottom="@dimen/_7sdp"
                android:textSize="@dimen/_15sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:layout_toRightOf="@+id/queTab_ivPlayPause"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/dark_sky_blue"
                android:maxLines="1"/>

        <TextView
                android:text="@string/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/queTab_tvSubmit"
                android:paddingTop="@dimen/_7sdp"
                android:paddingBottom="@dimen/_7sdp"
                android:textSize="@dimen/_15sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:textStyle="bold"
                android:paddingRight="@dimen/_5sdp"
                android:textColor="@color/dark_sky_blue"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                app:layout_constraintTop_toTopOf="parent"/>

    </RelativeLayout>

    <android.support.design.widget.TabLayout
            android:id="@+id/queTab_sliding_tabs"
            app:layout_constraintTop_toBottomOf="@+id/queTab_llTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_blue"
            android:layout_gravity="center_horizontal"
            app:tabGravity="fill"
            app:tabTextColor="@color/gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:tabTextAppearance="@style/TextAppearance.Design.Tab"
            app:tabSelectedTextColor="@color/dark_sky_blue"
            app:tabIndicatorColor="@color/black"
            android:overScrollMode="never"
            app:tabMode="scrollable"/>

    <android.support.v4.view.ViewPager
            android:id="@+id/queTab_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:paddingBottom="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/queTab_sliding_tabs"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/queTab_llBottom"/>

    <RelativeLayout
            android:id="@+id/queTab_llBottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/queTab_btnPrevious"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_35sdp"
                android:text="@string/previous"
                android:textSize="@dimen/_13sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_alignParentLeft="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/queTab_tvTotal"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/gray"
                android:layout_centerInParent="true"/>

        <Button
                android:id="@+id/queTab_btnNext"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_35sdp"
                android:text="@string/next"
                android:textSize="@dimen/_13sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_alignParentRight="true"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
