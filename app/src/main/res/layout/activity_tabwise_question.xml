                                    <!--app:layout_constraintTop_toTopOf="parent"/>-->

                                    <android.support.v7.widget.RecyclerView
                                            android:id="@+id/wv_question_list"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintBottom_toBottomOf="@+id/ll"
                                            android:nestedScrollingEnabled="false"
                                            android:visibility="gone"
                                            app:layout_constraintTop_toBottomOf="@+id/page_img_que_img"/>

                                    <EditText
                                            android:id="@+id/queTab_tvFillBlanks"
                                            android:layout_width="match_parent"
                                            android:layout_marginLeft="@dimen/_20sdp"
                                            android:layout_height="@dimen/_50sdp"
                                            android:layout_marginTop="@dimen/_20sdp"
                                            android:layout_marginBottom="@dimen/_5sdp"
                                            android:layout_marginRight="@dimen/_20sdp"
                                            android:maxLines="1"
                                            android:gravity="top"
                                            android:textSize="@dimen/_12sdp"
                                            android:visibility="gone"
                                            android:hint="Enter your answer here"
                                            android:background="@drawable/gray_ring_bg"
                                            android:padding="@dimen/_5sdp"
                                            app:layout_constraintTop_toBottomOf="@+id/page_img_que_img"/>

                                    <RadioGroup
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:visibility="gone"
                                            android:id="@+id/queTab_rbTruefalse"
                                            android:orientation="vertical">

                                        <RadioButton
                                                android:id="@+id/queTab_rbTrue"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="True"/>

                                        <RadioButton
                                                android:id="@+id/queTab_rbFalse"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="false"/>

                                    </RadioGroup>

                                </LinearLayout>

                                <!--</android.support.v7.widget.CardView>-->
                            </android.support.v4.widget.NestedScrollView>

                        </android.support.constraint.ConstraintLayout>

                        <!-- question end -->

                    </RelativeLayout>


                    <ImageView
                            android:id="@+id/queTab_ivReport"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:src="@drawable/risk_gray"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:visibility="gone"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/queTab_viewpager"
                            app:layout_constraintBottom_toTopOf="@+id/queTab_llBottom"
                            android:contentDescription="@string/logo"/>

                    <TextView
                            android:text="Report an issue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/queTab_tvReport"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:textSize="@dimen/small_text_size"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:textColor="@color/gray"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_alignParentRight="true"
                            android:visibility="gone"
                            app:layout_constraintLeft_toRightOf="@+id/queTab_ivReport"
                            app:layout_constraintBottom_toTopOf="@+id/queTab_llBottom"
                            app:layout_constraintTop_toBottomOf="@+id/queTab_viewpager"/>

                    <RelativeLayout
                            android:id="@+id/queTab_llBottom"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:background="@color/white"
                            android:visibility="gone"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_height="wrap_content">

                        <Button
                                android:id="@+id/queTab_btnPrevious"
                                android:layout_width="@dimen/_75sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:text="@string/previous"
                                android:textSize="@dimen/_13sdp"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:background="@color/colorPrimary"
                                android:textColor="@color/white"
                                android:textAllCaps="false"
                                android:textStyle="bold"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layout_alignParentLeft="true"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/queTab_tvTotal"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/gray"
                                android:layout_centerInParent="true"/>

                        <Button
                                android:id="@+id/queTabb_btnNextt"
                                android:layout_width="@dimen/_75sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:text="@string/next"
                                android:textSize="@dimen/_13sdp"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:background="@color/colorPrimary"
                                android:textColor="@color/white"
                                android:textAllCaps="false"
                                android:textStyle="bold"
                                android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                </android.support.constraint.ConstraintLayout>


            </LinearLayout>

        </FrameLayout>

        <RelativeLayout
                android:id="@+id/whatYouWantInLeftDrawer"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="match_parent"
                android:layout_gravity="right">

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/queTab_expQueList"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:layout_height="match_parent"/>

        </RelativeLayout>

    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>
