<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_350sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/white_ring_bg"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tutor_profile_tvMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:gravity="center"
                android:maxLines="1"
                android:text="Write Review"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

        <android.support.v7.widget.AppCompatRatingBar
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:isIndicator="false"
                android:numStars="5" />

        <EditText
                android:id="@+id/tutor_profile_etReview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/gray_ring_bg"
                android:gravity="top"
                android:hint="Enter your review here..."
                android:maxLines="5"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

        <Button
                android:id="@+id/dialog_review_btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:background="@drawable/light_blue_round_bg"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white" />


    </LinearLayout>

    <ImageView
            android:id="@+id/dialog_review_btnClose"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:src="@drawable/fail_icon"
            android:textColor="@color/red"
            android:textSize="@dimen/normal_header_size" />

</RelativeLayout>
