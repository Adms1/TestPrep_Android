    <TextView
            android:text="Packages"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_7sdp"
            android:paddingTop="@dimen/_7sdp"
            android:id="@+id/tutor_detail_header"
            android:layout_marginBottom="@dimen/_5sdp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintRight_toLeftOf="@+id/tutor_detail_rlFilter"
            android:textColor="@color/black"
            android:maxWidth="@dimen/_150sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tutor_detail_ivBack"
            android:textSize="@dimen/normal_header_size"
            android:gravity="center_vertical"/>

    <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/sort_down"
            android:id="@+id/tutor_detail_ivSort"
            android:padding="@dimen/_7sdp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/dashboard_header"
            app:layout_constraintBottom_toBottomOf="@+id/dashboard_header"/>

    <RelativeLayout
            android:id="@+id/tutor_detail_rlFilter"
            android:layout_width="@dimen/_33sdp"
            android:layout_height="@dimen/_30sdp"
            app:layout_constraintRight_toLeftOf="@id/tutor_detail_ivSort"
            app:layout_constraintTop_toTopOf="@+id/dashboard_header"
            android:onClick="onClick"
            app:layout_constraintBottom_toBottomOf="@+id/dashboard_header">

        <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/filter_icon"
                android:id="@+id/tutor_detail_ivFilter"
                android:padding="@dimen/_7sdp"/>

        <TextView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/filter_icon"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:id="@+id/tutor_detail_tvFilter"
                android:background="@drawable/red_round"/>

    </RelativeLayout>

    <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/back_button"
            android:id="@+id/tutor_detail_ivBack"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tutor_detail_header"
