    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/llFirst"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            android:weightSum="1">

        <TextView
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="wrap_content"
                android:id="@+id/choosemp_tvStandard"
                android:text="Standard"
                android:textSize="@dimen/extra_small_size"/>

        <TextView
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="wrap_content"
                android:id="@+id/choosemp_tvSubject"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Subject"
                android:textSize="@dimen/extra_small_size"/>

        <TextView
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="wrap_content"
                android:id="@+id/choosemp_tvTutors"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Tutors"
                android:textSize="@dimen/extra_small_size"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/llSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/llFirst"
            android:weightSum="1">

        <RelativeLayout
                android:id="@+id/rlOne"
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/choosemp_tvTutors"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/login_btn_bg"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/choosemp_filterStandard"
                    android:text="10th"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/small_text_size"
                    android:layout_alignParentStart="true"/>

            <ImageView
                    android:id="@+id/choosemp_ivStandard"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/filter_icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_2sdp"
                    android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rlTwo"
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/choosemp_tvTutors"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/login_btn_bg"
                android:layout_marginLeft="@dimen/_10sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/choosemp_filterSubject"
                    android:text="Sci, Ma"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/small_text_size"
                    android:layout_alignParentStart="true"/>

            <ImageView
                    android:id="@+id/choosemp_ivSubject"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/filter_icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_2sdp"
                    android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rlThree"
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/choosemp_tvTutors"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/login_btn_bg"
                android:layout_marginLeft="@dimen/_10sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:paddingRight="@dimen/_5sdp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/choosemp_filterTutors"
                    android:text="All"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/small_text_size"
                    android:layout_alignParentStart="true"/>

            <ImageView
                    android:id="@+id/choosemp_ivTutors"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/filter_icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_2sdp"
                    android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/llThird"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/llSecond"
            android:weightSum="1">

        <TextView
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="wrap_content"
                android:id="@+id/choosemp_tveExam"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Exam"
                android:textSize="@dimen/extra_small_size"/>

        <TextView
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="wrap_content"
                android:id="@+id/choosemp_tveSubject"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Subject"
                android:textSize="@dimen/extra_small_size"/>

        <TextView
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="wrap_content"
                android:id="@+id/choosemp_tveTutors"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Tutors"
                android:textSize="@dimen/extra_small_size"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/llFourth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/llThird"
            android:weightSum="1">

        <RelativeLayout
                android:id="@+id/rlFour"
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="wrap_content"
                android:background="@drawable/login_btn_bg"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
