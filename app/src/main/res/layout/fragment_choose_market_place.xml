<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_10sdp"
        android:background="@color/white"
        tools:context=".fragments.ChooseMarketPlaceFragment">

    <TextView
            android:text="@string/market_place"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/choosemp_header"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"
            app:layout_constraintLeft_toRightOf="@+id/choosemp_ivBack"
            android:textSize="@dimen/normal_header_size"
            android:gravity="center_vertical"
            android:textColor="@color/black"/>

    <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/back_button"
            android:id="@+id/choosemp_ivBack"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/choosemp_header"
            android:padding="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="@+id/choosemp_header"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/choosemp_tvSingleTest"
            app:layout_constraintBottom_toTopOf="@+id/choosemp_tvTestPackages"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="Single Test"
            android:gravity="center"
            android:textSize="@dimen/normal_header_size"
            android:padding="@dimen/_25sdp"
            android:background="@drawable/add_cart_bg"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/choosemp_tvTestPackages"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Test Packages"
            android:gravity="center"
            android:textSize="@dimen/normal_header_size"
            android:padding="@dimen/_25sdp"
            android:background="@drawable/add_cart_bg"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/choosemp_tvTutors"
            app:layout_constraintTop_toBottomOf="@+id/choosemp_tvTestPackages"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Tutors"
            android:gravity="center"
            android:textSize="@dimen/normal_header_size"
            android:padding="@dimen/_25sdp"
            android:background="@drawable/add_cart_bg"/>

</androidx.constraintlayout.widget.ConstraintLayout>
