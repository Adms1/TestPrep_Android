                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/choosemp_filtereSubject"
                    android:text="Sci, Ma"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/small_text_size"
                    android:layout_alignParentStart="true"/>

            <ImageView
                    android:id="@+id/choosemp_iveSubject"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/filter_icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_2sdp"
                    android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rlSix"
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="wrap_content"
                android:background="@drawable/login_btn_bg"
                android:layout_marginLeft="@dimen/_10sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/choosemp_filtereTutors"
                    android:text="Bothra,Ga"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/small_text_size"
                    android:layout_alignParentStart="true"/>

            <ImageView
                    android:id="@+id/choosemp_iveTutors"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/filter_icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_2sdp"
                    android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/choosemp_tvBalance"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Your TC$ Balance: 3500 "
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@+id/choosemp_tvPayTC"
            app:layout_constraintBottom_toBottomOf="@+id/choosemp_tvPayTC"
            android:textSize="@dimen/small_text_size"/>

    <TextView
            android:layout_width="0dp"
            android:layout_weight="0.33"
            android:layout_height="wrap_content"
            android:id="@+id/choosemp_tvPayTC"
            app:layout_constraintTop_toBottomOf="@+id/llFourth"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="  Pay with TC$  "
            android:textColor="@color/white"
            android:padding="@dimen/_4sdp"
            app:layout_constraintLeft_toRightOf="@+id/choosemp_tvBalance"
            android:background="@drawable/green_bg"
            android:textSize="@dimen/extra_small_size"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/choosemp_rvList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@+id/choosemp_tvPayTC"
            app:layout_constraintBottom_toBottomOf="parent"/>

