<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".fragments.TutorsReviewFragment">

    <TextView
            android:text=""
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tutor_review_header"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"
            app:layout_constraintLeft_toRightOf="@+id/tutor_review_ivBack"
            android:textSize="@dimen/normal_header_size"
            android:gravity="center_vertical"
            android:textColor="@color/black"/>

    <TextView
            android:text="(View Profile)"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tutor_review_tvViewProfile"
            app:layout_constraintTop_toTopOf="@+id/tutor_review_header"
            app:layout_constraintBottom_toBottomOf="@+id/tutor_review_header"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"
            app:layout_constraintLeft_toRightOf="@+id/tutor_review_header"
            android:textSize="@dimen/small_text_size"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:textColor="@color/colorPrimaryDark"/>

    <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/back_button"
            android:id="@+id/tutor_review_ivBack"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tutor_review_header"
            android:padding="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="@+id/tutor_review_header"/>

    <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/tutor_review_ivCart"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="@+id/tutor_review_header"
            android:padding="@dimen/_5sdp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tutor_review_header"/>


    <android.support.v7.widget.RecyclerView
            android:id="@+id/tutor_review_rvReview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/tutor_review_header"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="@dimen/_25sdp"
            android:background="@drawable/light_blue_round_bg"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:textAllCaps="false"
            android:text="Write a review"/>

</android.support.constraint.ConstraintLayout>
