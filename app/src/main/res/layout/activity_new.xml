<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="@dimen/_20sdp">

    <TextView
        android:id="@+id/home_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_35sdp"
        android:gravity="center"
        android:text="@string/please_select_the_type_of_exam_you_are_prepairing_for"
        android:textColor="@color/white"
        android:textSize="@dimen/app_sub_header_size"
        app:layout_constraintBottom_toTopOf="@+id/new_coarse_rvCoarseList" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/new_coarse_rvCoarseList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
