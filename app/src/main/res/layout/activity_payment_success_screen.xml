<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_login_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/imvSuccessFail"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            app:layout_constraintBottom_toTopOf="@+id/tvMessage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="@dimen/_20sdp"
            android:src="@drawable/payment_success_icn"/>

    <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your transaction has been completed successfully"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/black"/>

    <TextView
            android:id="@+id/tvPkgname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Atoms"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_20sdp"
            app:layout_constraintBottom_toTopOf="@+id/tvTry"
            app:layout_constraintRight_toLeftOf="@+id/tvPrice"
            app:layout_constraintTop_toBottomOf="@+id/tvMessage"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/black"/>

    <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500.00"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/_20sdp"
            app:layout_constraintBottom_toTopOf="@+id/tvTry"
            app:layout_constraintTop_toBottomOf="@+id/tvMessage"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/black"/>


    <Button
            android:id="@+id/tvTry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK"
            android:background="@drawable/google_round_bg"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:textAllCaps="false"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/tvMessage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"/>

    <Button
            android:id="@+id/tvCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="@drawable/light_blue_round_bg"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/tvTry"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:textAllCaps="false"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/white"/>

