<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test_ss"
    tools:context=".activity.TestInstructionActivity">

    <TextView
        android:id="@+id/dialog_testinstruction_main_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:ellipsize="end"
        android:paddingTop="@dimen/_7sdp"
        android:paddingBottom="@dimen/_7sdp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@color/header_gray"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintLeft_toRightOf="@+id/dialog_testinstruction_ivBack"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dialog_testinstruction_ivBack"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/back_button"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_testinstruction_main_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_testinstruction_main_header"
        tools:ignore="ContentDescription" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"
        android:background="@color/black" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/white_ring_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/dialog_testinstruction_tvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dialog_testinstruction_tvSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:maxLines="1"
            android:text="Subject Name"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/extra_small_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_testinstruction_tvHeader" />

        <TextView
            android:id="@+id/dialog_testinstruction_tvSubjectName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintLeft_toLeftOf="@+id/dialog_testinstruction_tvSubject"
            app:layout_constraintRight_toLeftOf="@+id/dialog_testinstruction_tvCourse"
            app:layout_constraintTop_toBottomOf="@+id/dialog_testinstruction_tvSubject" />

        <TextView
            android:id="@+id/dialog_testinstruction_tvCourseHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Course Type"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/extra_small_size"
            app:layout_constraintLeft_toLeftOf="@+id/dialog_testinstruction_tvCourse"
            app:layout_constraintTop_toTopOf="@+id/dialog_testinstruction_tvSubject" />

        <TextView
            android:id="@+id/dialog_testinstruction_tvCourse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintLeft_toRightOf="@+id/dialog_testinstruction_tvSubjectName"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_testinstruction_tvCourseHeader" />

        <TextView
            android:id="@+id/dialog_testinstruction_tvTotalMarksHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:maxLines="1"
            android:text="Total Marks"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/extra_small_size"
            app:layout_constraintLeft_toLeftOf="@+id/dialog_testinstruction_tvSubject"
            app:layout_constraintTop_toBottomOf="@+id/dialog_testinstruction_tvSubjectName" />

        <TextView
            android:id="@+id/dialog_testinstruction_tvTotalMarks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintLeft_toLeftOf="@+id/dialog_testinstruction_tvTotalMarksHeader"
            app:layout_constraintRight_toRightOf="@+id/dialog_testinstruction_tvSubjectName"
            app:layout_constraintTop_toBottomOf="@+id/dialog_testinstruction_tvTotalMarksHeader" />

        <TextView
            android:id="@+id/dialog_testinstruction_tvQueHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:maxLines="1"
            android:text="Total Questions"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/extra_small_size"
            app:layout_constraintLeft_toLeftOf="@+id/dialog_testinstruction_tvCourse"
            app:layout_constraintTop_toBottomOf="@+id/dialog_testinstruction_tvCourse" />

        <TextView
            android:id="@+id/dialog_testinstruction_tvQue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintLeft_toLeftOf="@+id/dialog_testinstruction_tvCourse"
            app:layout_constraintRight_toRightOf="@+id/dialog_testinstruction_tvCourse"
            app:layout_constraintTop_toBottomOf="@+id/dialog_testinstruction_tvQueHeader" />

        <TextView
            android:id="@+id/dialog_testinstruction_tvTeacher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:gravity="left"
            android:maxLines="1"
            android:visibility="gone"
            android:text="Tutor Name"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/extra_small_size"
            app:layout_constraintLeft_toLeftOf="@+id/dialog_testinstruction_tvSubject"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_testinstruction_tvTotalMarks" />

        <TextView
            android:id="@+id/dialog_testinstruction_tvTeacherName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/dialog_testinstruction_tvSubject"
            app:layout_constraintRight_toRightOf="@+id/dialog_testinstruction_tvTeacher"
            app:layout_constraintTop_toBottomOf="@+id/dialog_testinstruction_tvTeacher" />

        <TextView
            android:id="@+id/dialog_testinstruction_tvDismiss"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/left_gray_corner_bg"
            android:gravity="center"
            android:maxLines="1"
            android:padding="@dimen/_10sdp"
            android:text="Dismiss"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/dialog_testinstruction_tvStartTest"
            app:layout_constraintTop_toBottomOf="@+id/dialog_testinstruction_tvTeacherName" />

        <TextView
            android:id="@+id/dialog_testinstruction_tvStartTest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/right_blue_conrner_bg"
            android:gravity="center"
            android:maxLines="1"
            android:padding="@dimen/_10sdp"
            android:text="Start Test"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintLeft_toRightOf="@+id/dialog_testinstruction_tvDismiss"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_testinstruction_tvTeacherName" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
