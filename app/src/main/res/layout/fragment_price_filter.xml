<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:rsb="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".fragments.PriceFilterFragment">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            rsb:layout_constraintTop_toTopOf="parent"
            rsb:layout_constraintLeft_toLeftOf="parent"
            android:text="Min."
            android:textAllCaps="true"
            android:textSize="@dimen/normal_text_size"
            android:layout_margin="@dimen/_10sdp"
            android:id="@+id/price_filter_tvMin"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price_filter_etMin"
            rsb:layout_constraintTop_toBottomOf="@+id/price_filter_tvMin"
            rsb:layout_constraintLeft_toLeftOf="parent"
            android:text="   0"
            android:paddingLeft="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_header_size"
            android:layout_marginLeft="@dimen/_5sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:paddingRight="@dimen/_10sdp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            rsb:layout_constraintTop_toTopOf="parent"
            rsb:layout_constraintRight_toRightOf="parent"
            android:text="Max."
            android:textSize="@dimen/normal_text_size"
            android:layout_margin="@dimen/_10sdp"
            android:textAllCaps="true"
            android:id="@+id/price_filter_tvMax"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price_filter_etMax"
            rsb:layout_constraintTop_toBottomOf="@+id/price_filter_tvMin"
            rsb:layout_constraintRight_toRightOf="parent"
            android:text="1000"
            android:textColor="@color/black"
            android:paddingBottom="@dimen/_15sdp"
            android:textSize="@dimen/normal_header_size"
            android:layout_marginRight="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_5sdp"/>

    <io.apptik.widget.MultiSlider
            android:id="@+id/price_filter_range_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            rsb:layout_constraintTop_toBottomOf="@+id/price_filter_etMin"
            android:layout_margin="@dimen/_20sdp"
            rsb:scaleMin="0"
            rsb:scaleMax="1000"
            rsb:rangeColor="@color/gray"
            app:trackColor="@color/gray"/>

</android.support.constraint.ConstraintLayout>
