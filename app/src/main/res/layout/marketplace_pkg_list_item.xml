<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mall"
        android:paddingRight="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingLeft="@dimen/_5sdp">

    <TextView
            android:id="@+id/package_item_tvPkgname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="left"
            android:textColor="@color/black"
            app:layout_constraintRight_toRightOf="@+id/package_item_rlImage"
            app:layout_constraintLeft_toLeftOf="@+id/package_item_rlImage"
            android:textSize="@dimen/_12sdp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/package_item_tvSub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintLeft_toLeftOf="@+id/package_item_rlImage"
            app:layout_constraintRight_toRightOf="@+id/package_item_rlImage"
            android:textColor="@color/gray"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintTop_toBottomOf="@+id/package_item_tvPkgname" />

    <TextView
            android:id="@+id/package_item_tvCreated"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintLeft_toLeftOf="@+id/package_item_rlImage"
            app:layout_constraintRight_toLeftOf="@+id/package_item_tvPrice"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@+id/package_item_tvSub" />

    <TextView
            android:id="@+id/package_item_tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="@dimen/_3sdp"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintBottom_toBottomOf="@+id/package_item_tvCreated"
            android:textColor="@color/gray"
            app:layout_constraintRight_toRightOf="@+id/package_item_rlImage"
            app:layout_constraintTop_toTopOf="@+id/package_item_tvSub" />

    <RelativeLayout
            android:id="@+id/package_item_rlImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            app:layout_constraintTop_toBottomOf="@+id/package_item_tvCreated"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            app:layout_constraintRight_toRightOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/package_item_ivBg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:alpha="0.3"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_corner_radius="@dimen/_8sdp" />

        <ImageView
                android:id="@+id/package_item_ivImage"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_130sdp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY" />

    </RelativeLayout>


