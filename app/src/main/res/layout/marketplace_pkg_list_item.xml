<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mall"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/carousel_bg">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/carousel_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/package_item_rlImage"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            app:layout_constraintBottom_toBottomOf="@+id/package_item_tvCreated"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/package_item_tvPkgname">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/package_item_ivImage"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp" />

            <TextView
                android:id="@+id/package_item_tvName_short"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_25sdp" />

            <ImageView
                android:id="@+id/package_item_ivSelect"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:layout_alignParentRight="true"
                android:src="@drawable/right_white_bg"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </RelativeLayout>

    <TextView
        android:id="@+id/package_item_tvPkgname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:maxLines="2"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintLeft_toRightOf="@+id/package_item_rlImage"
        app:layout_constraintRight_toLeftOf="@id/package_item_tvPrice"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/package_item_tvSub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_11sdp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintLeft_toLeftOf="@+id/package_item_tvPkgname"
        app:layout_constraintRight_toRightOf="@id/package_item_tvPkgname"
        app:layout_constraintTop_toBottomOf="@+id/package_item_tvPkgname" />

    <TextView
        android:id="@+id/package_item_tvCreated"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:maxLines="1"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintBottom_toTopOf="@id/package_item_tvDesc"
        app:layout_constraintLeft_toLeftOf="@+id/package_item_tvPkgname"
        app:layout_constraintRight_toRightOf="@id/package_item_tvPrice"
        app:layout_constraintTop_toBottomOf="@+id/package_item_tvSub" />

        <TextView
            android:id="@+id/package_item_tvPricetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:text="Price"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/package_item_tvPkgname" />

        <TextView
        android:id="@+id/package_item_tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
            android:maxLines="1"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintRight_toRightOf="@+id/package_item_tvPricetitle"
            app:layout_constraintTop_toBottomOf="@+id/package_item_tvPricetitle" />

        <TextView
            android:id="@+id/package_item_tvDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="This package contains following test:"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintLeft_toLeftOf="@+id/package_item_rlImage"
            app:layout_constraintRight_toRightOf="@id/package_item_tvPricetitle"
            app:layout_constraintTop_toBottomOf="@+id/package_item_rlImage" />

        <TextView
            android:id="@+id/package_item_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintLeft_toLeftOf="@+id/package_item_rlImage"
            app:layout_constraintRight_toRightOf="@id/package_item_tvPricetitle"
            app:layout_constraintTop_toBottomOf="@+id/package_item_tvDesc" />

        <TextView
            android:id="@+id/package_item_tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintLeft_toLeftOf="@+id/package_item_rlImage"
            app:layout_constraintRight_toRightOf="@id/package_item_tvPricetitle"
            app:layout_constraintTop_toBottomOf="@+id/package_item_tv1" />

        <TextView
            android:id="@+id/package_item_tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintLeft_toLeftOf="@+id/package_item_rlImage"
            app:layout_constraintRight_toRightOf="@id/package_item_tvPricetitle"
            app:layout_constraintTop_toBottomOf="@+id/package_item_tv2" />

        <TextView
            android:id="@+id/package_item_tv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintLeft_toLeftOf="@+id/package_item_rlImage"
            app:layout_constraintRight_toRightOf="@id/package_item_tvPricetitle"
            app:layout_constraintTop_toBottomOf="@+id/package_item_tv3" />

        <TextView
            android:id="@+id/package_item_tv5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintLeft_toLeftOf="@+id/package_item_rlImage"
            app:layout_constraintRight_toRightOf="@id/package_item_tvPricetitle"
            app:layout_constraintTop_toBottomOf="@+id/package_item_tv4" />

        <TextView
            android:id="@+id/package_item_tv6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintLeft_toLeftOf="@+id/package_item_rlImage"
            app:layout_constraintRight_toRightOf="@id/package_item_tvPricetitle"
            app:layout_constraintTop_toBottomOf="@+id/package_item_tv5" />

        <TextView
            android:id="@+id/package_item_tvDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:padding="@dimen/_5sdp"
            android:text="View Detail..."
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@id/package_item_tvPricetitle"
            app:layout_constraintTop_toBottomOf="@id/package_item_tv6" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/default_shimmer_color"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/item_rlImage" />


