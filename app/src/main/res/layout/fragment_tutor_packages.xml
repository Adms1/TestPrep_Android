<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".fragments.TutorPackagesFragment">

    <android.support.constraint.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

        <RelativeLayout
                android:id="@+id/tutor_packages_rlPHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_blue"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center">

            <TextView
                    android:text="Popular Packages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_7sdp"
                    android:paddingBottom="@dimen/_7sdp"
                    android:textSize="@dimen/_14sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@color/gray"/>

            <TextView
                    android:text="See all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/down_arrow"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_7sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:id="@+id/tutor_packages__tvPSeeall"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/tutor_packages_rvPopularPkg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/tutor_packages_rlPHeader"/>

        <RelativeLayout
                android:id="@+id/tutor_packages_rlSHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_blue"
                app:layout_constraintTop_toBottomOf="@+id/tutor_packages_rvPopularPkg"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center">

            <TextView
                    android:text="Popular Single Test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_7sdp"
                    android:id="@+id/pref_tvStep1"
                    android:paddingBottom="@dimen/_7sdp"
                    android:textSize="@dimen/_14sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@color/gray"/>

            <TextView
                    android:text="See all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/down_arrow"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_7sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:id="@+id/tutor_packages_tvSSeeall"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/tutor_packages_rvPopularTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/tutor_packages_rlSHeader"/>

    </android.support.constraint.ConstraintLayout>

</ScrollView>
