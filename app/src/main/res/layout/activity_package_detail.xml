<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.PackageDetailActivity">

    <TextView
            android:text="Packages Detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/package_detail_header"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"/>

    <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/left_arrow"
            android:id="@+id/package_detail_ivBack"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="@+id/package_detail_header"/>

    <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/_40sdp"
            app:layout_constraintTop_toBottomOf="@+id/package_detail_ivBack"
            android:id="@+id/package_detail_image1"/>

    <TextView
            android:text="Packages name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/package_detail_tvPname"
            android:gravity="center"
            android:layout_marginTop="@dimen/_40sdp"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@+id/package_detail_header"
            app:layout_constraintLeft_toRightOf="@+id/package_detail_image1"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

    <TextView
            android:text="Sale Price : 400"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/package_detail_tvsprice"
            android:gravity="center"
            android:textSize="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@+id/package_detail_tvPname"
            app:layout_constraintLeft_toRightOf="@+id/package_detail_image1"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/green"/>

    <TextView
            android:text="MRP Price : 500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/package_detail_tvlprice"
            android:gravity="center"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintTop_toBottomOf="@+id/package_detail_tvsprice"
            app:layout_constraintLeft_toRightOf="@+id/package_detail_image1"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/black"/>

    <Button
            android:text="Add to Cart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/package_detail_btnAddTocart"
            android:gravity="center"
            android:textSize="@dimen/_11sdp"
            android:padding="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/package_detail_tvlprice"
            app:layout_constraintTop_toBottomOf="@+id/package_detail_tvlprice"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:textStyle="bold"/>

    <TextView
            android:text="@string/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/package_detail_tvDesctitle"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@+id/package_detail_btnAddTocart"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/_20sdp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

    <TextView
            android:text="Full Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/package_detail_tvDesc"
            android:gravity="center"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@+id/package_detail_tvDesctitle"
            app:layout_constraintLeft_toRightOf="@+id/package_detail_image1"
            android:layout_marginLeft="@dimen/_20sdp"
            android:textColor="@color/black"/>

</android.support.constraint.ConstraintLayout>
