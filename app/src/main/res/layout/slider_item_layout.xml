<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:srcCompat="@drawable/result_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/_5sdp"
            android:id="@+id/imageView"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:srcCompat="@drawable/result_bg"
            app:layout_constraintBottom_toBottomOf="@+id/btnBuy"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btnBuy"
            android:textSize="@dimen/normal_text_size"
            android:text="abcdefghjiklmnopqrstuvwxyz"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:id="@+id/testName"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_28sdp"
            tools:srcCompat="@drawable/result_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Buy Now"
            android:background="@drawable/yellow_ring_bg"
            android:textColor="@color/yellow"
            android:layout_margin="@dimen/_20sdp"
            android:id="@+id/btnBuy"/>

</android.support.constraint.ConstraintLayout>
