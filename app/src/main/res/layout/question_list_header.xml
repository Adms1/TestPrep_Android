<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EFEFEF">

    <TextView
        android:id="@+id/queList_tvHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:padding="@dimen/_3sdp"
        android:text="Section 1"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/queList_ivInfo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/queList_ivInfo"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:padding="@dimen/_3sdp"
        android:src="@drawable/info_icon"
        app:layout_constraintBottom_toBottomOf="@+id/queList_tvHeader"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/queList_tvHeader"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
