<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFEFEF">

    <TextView
            android:id="@+id/queList_tvHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Section 1"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/queList_ivInfo"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textColor="@color/black"
            android:padding="@dimen/_3sdp"/>

    <ImageView
            android:id="@+id/queList_ivInfo"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            app:layout_constraintTop_toTopOf="@+id/queList_tvHeader"
            app:layout_constraintBottom_toBottomOf="@+id/queList_tvHeader"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/info_icon"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="@dimen/_3sdp"/>

</android.support.constraint.ConstraintLayout>
