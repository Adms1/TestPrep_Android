<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".fragments.SelectCoarseFragment">

    <TextView
            android:text="My Payments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/my_payments_header"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"
            app:layout_constraintLeft_toRightOf="@+id/my_payments_ivBack"
            android:textSize="@dimen/normal_header_size"
            android:gravity="center_vertical"
            android:textColor="@color/black"/>

    <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/back_button"
            android:id="@+id/my_payments_ivBack"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/my_payments_header"
            android:padding="@dimen/_9sdp"
            app:layout_constraintBottom_toBottomOf="@+id/my_payments_header"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/my_payments_rvList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/my_payments_header"/>

    <TextView
            android:id="@+id/my_payments_tvdatanotfound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payments not found"
            android:textColor="@color/red"
            android:textSize="@dimen/_16sdp"
            android:visibility="gone"
            android:gravity="center"
            android:padding="@dimen/_25sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
