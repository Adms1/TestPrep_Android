<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_my_package_main"
        android:padding="@dimen/_8sdp">

    <RelativeLayout
            android:id="@+id/item_rlImage"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            app:layout_constraintTop_toTopOf="@+id/item_my_package_name"
            app:layout_constraintBottom_toBottomOf="@+id/item_my_package_price"
            app:layout_constraintLeft_toLeftOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:id="@+id/item_my_package_image"/>

        <TextView
                android:id="@+id/item_my_package_name_short"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/_25sdp"
                android:textAllCaps="true"
                android:layout_centerInParent="true"/>

    </RelativeLayout>

    <TextView
            android:id="@+id/item_my_package_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/item_my_package_btnNext"
            app:layout_constraintLeft_toRightOf="@+id/item_rlImage"/>

    <TextView
            android:id="@+id/item_my_package_sdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintLeft_toRightOf="@+id/item_rlImage"
            app:layout_constraintLeft_toLeftOf="@+id/item_my_package_name"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@+id/item_my_package_name"/>

    <TextView
            android:id="@+id/item_my_package_edate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintRight_toRightOf="parent"
            android:maxLines="1"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@id/item_my_package_sdate"
            app:layout_constraintTop_toBottomOf="@id/item_my_package_name"
            android:text="24/05/2020"/>

    <TextView
            android:id="@+id/item_my_package_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintLeft_toLeftOf="@+id/item_my_package_name"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@+id/item_my_package_sdate"/>

    <TextView
            android:id="@+id/item_my_package_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintLeft_toRightOf="@+id/item_my_package_price"
            android:maxLines="1"
            android:layout_marginLeft="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/item_my_package_sdate"/>

    <Button
            android:id="@+id/item_my_package_view"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_25sdp"
            android:gravity="center"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintLeft_toRightOf="@+id/item_rlImage"
            app:layout_constraintLeft_toLeftOf="@+id/item_my_package_name"
            android:maxLines="1"
            android:text="View"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone"
            android:background="@drawable/blue_gradient_bg"
            app:layout_constraintTop_toBottomOf="@+id/item_my_package_price"/>

    <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:padding="@dimen/_9sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/back_button"
            android:rotation="180"
            android:layout_marginRight="@dimen/_10sdp"
            android:id="@+id/item_my_package_btnNext"/>

    <Button
            android:id="@+id/item_my_package_btntest"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_25sdp"
            android:gravity="center"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintRight_toRightOf="parent"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone"
            android:background="@drawable/blue_gradient_bg"
            app:layout_constraintLeft_toRightOf="@id/item_my_package_view"
            app:layout_constraintTop_toBottomOf="@id/item_my_package_price"
            android:text="Test"/>

    <View android:layout_width="match_parent" android:layout_height="@dimen/_1sdp"
          android:background="@color/default_shimmer_color"
          android:layout_marginTop="@dimen/_10sdp"
          app:layout_constraintTop_toBottomOf="@+id/item_rlImage"/>

</android.support.constraint.ConstraintLayout>

