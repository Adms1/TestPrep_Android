<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_my_package_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_3sdp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp">

        <RelativeLayout
                android:id="@+id/item_rlImage"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">

            <ImageView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:id="@+id/item_my_package_image"
                    android:src="@drawable/gray_bg"/>

            <TextView
                    android:id="@+id/item_my_package_name_short"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_25sdp"
                    android:layout_centerInParent="true"/>

        </RelativeLayout>

        <TextView
                android:id="@+id/item_my_package_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="CBSE 9th science package"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/black"
                android:maxLines="1"
                android:layout_marginLeft="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/item_rlImage"/>

        <TextView
                android:id="@+id/item_my_package_sdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toRightOf="@+id/item_rlImage"
                app:layout_constraintLeft_toLeftOf="@+id/item_my_package_name"
                android:maxLines="1"
                android:text="24/05/2019"
                app:layout_constraintTop_toBottomOf="@+id/item_my_package_name"/>

        <TextView
                android:id="@+id/item_my_package_edate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintRight_toRightOf="parent"
                android:maxLines="1"
                app:layout_constraintLeft_toRightOf="@id/item_my_package_sdate"
                app:layout_constraintTop_toBottomOf="@id/item_my_package_name"
                android:text="24/05/2020"/>

        <TextView
                android:id="@+id/item_my_package_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/normal_text_size"
                app:layout_constraintLeft_toLeftOf="@+id/item_my_package_name"
                android:maxLines="1"
                android:text="Price : 100"
                app:layout_constraintTop_toBottomOf="@+id/item_my_package_edate"/>

        <Button
                android:id="@+id/item_my_package_view"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_30sdp"
                android:gravity="center"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toRightOf="@+id/item_rlImage"
                app:layout_constraintLeft_toLeftOf="@+id/item_my_package_name"
                android:maxLines="1"
                android:text="View"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/blue_gradient_bg"
                app:layout_constraintTop_toBottomOf="@+id/item_my_package_price"/>

        <Button
                android:id="@+id/item_my_package_test"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_30sdp"
                android:gravity="center"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintRight_toRightOf="parent"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/blue_gradient_bg"
                app:layout_constraintLeft_toRightOf="@id/item_my_package_view"
                app:layout_constraintTop_toBottomOf="@id/item_my_package_price"
                android:text="Test"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
