<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp">

    <TextView
        android:id="@+id/list_item_usedcoupon_tvCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Firstfree"
        android:textColor="@color/black"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_usedcoupon_tvDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="Using this code user get free test...!"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintTop_toBottomOf="@+id/list_item_usedcoupon_tvCode" />

    <TextView
        android:id="@+id/list_item_usedcoupon_tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Appplied date :  04 Jan 2020"
        android:textSize="@dimen/extra_small_size"
        app:layout_constraintTop_toBottomOf="@+id/list_item_usedcoupon_tvDesc" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/thin_line"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/list_item_usedcoupon_tvDate" />

</androidx.constraintlayout.widget.ConstraintLayout>
